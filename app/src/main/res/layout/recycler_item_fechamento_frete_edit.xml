<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rec_item_fechamento_frete_recebimento_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:hint="Frete LÃ­quido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:prefixText="R$ ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rec_item_fechamento_frete_recebimento_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/rec_item_fechamento_frete_recebimento_atualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:src="@drawable/ic_change_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rec_item_fechamento_frete_recebimento_layout"
        app:layout_constraintBottom_toBottomOf="@id/rec_item_fechamento_frete_recebimento_layout"
        app:layout_constraintStart_toEndOf="@id/rec_item_fechamento_frete_recebimento_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>